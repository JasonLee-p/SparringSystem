<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/LinearLayout_home"
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_searchbox"
            android:layout_width="350dp"
            android:layout_height="38dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:drawableLeft="@drawable/app_icon_background"
            android:text="搜素歌曲/歌手"
            android:textAlignment="viewStart"
            android:textColor="#989898"
            android:textSize="24dp"
            app:drawableLeftCompat="@android:drawable/ic_search_category_default" />

        <LinearLayout
            android:id="@+id/Linearlayout_RecommendedPlaylists"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Recommended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-black"
                android:text="个性推荐"
                android:textAlignment="textStart"
                android:textColor="#403131"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/ScrollView_ReccommendedPlaylist"
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <LinearLayout
                    android:layout_width="700dp"
                    android:layout_height="220dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/LinearLayout_Palylist1"
                        android:layout_width="150dp"
                        android:layout_height="220dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/ImageButton_playlists1"
                            android:contentDescription="@string/app_name"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@android:drawable/btn_star" />

                        <TextView
                            android:id="@+id/textview_Playlist1Keyword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="每日推荐"
                            android:textColor="#635858"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textview_Playlist1Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="符合你口味的新鲜好歌"
                            android:textColor="#757575"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout_Palylist2"
                        android:layout_width="150dp"
                        android:layout_height="220dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/ImageButton_playlists2"
                            android:contentDescription="@string/app_name"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@android:drawable/star_big_on" />

                        <TextView
                            android:id="@+id/textview_Playlist2Keyword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="私人漫游"
                            android:textColor="#635858"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textview_Playlist2Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="多种模式随心播放"
                            android:textColor="#757575"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout_Palylist3"
                        android:layout_width="150dp"
                        android:layout_height="220dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/ImageButton_playlists3"
                            android:contentDescription="@string/app_name"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@android:drawable/star_off" />

                        <TextView
                            android:id="@+id/textView_Playlists3Keyword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="民谣专场"
                            android:textColor="#635858"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView_Playlists3Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="进入民谣的浪漫世界"
                            android:textColor="#757575"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout_Palylist4"
                        android:layout_width="150dp"
                        android:layout_height="220dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButton_Playlist4"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@android:drawable/star_on" />

                        <TextView
                            android:id="@+id/textView_Playlist4Keyword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="舒缓轻音"
                            android:textColor="#635858"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView_Playlist4Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="TextView"
                            android:textColor="#757575"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton_TrainingEntrance"
                    android:contentDescription="@string/app_name"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/textView_TrainingEntrance"
                    android:layout_width="80dp"
                    android:layout_height="20sp"
                    android:text="训练入口"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout_Rankings"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton_Rankings"
                    android:contentDescription="@string/app_name"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/textView_Rankings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="排行榜"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout_Playlists"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton_Playlists"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/app_name"
                    android:src="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/textView_Playlists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="歌单"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout_VideoPlayback"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton_VideoPlayback"
                    android:contentDescription="@string/app_name"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/textView_VideoPlayback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="视频播放"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout_TrainingRecords"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton_TrainingRecords"
                    android:contentDescription="@string/app_name"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/textView_TrainingRecords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="训练记录"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Course"
            android:layout_width="410dp"
            android:layout_height="180dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-black"
                android:text="推荐课程"
                android:textColor="#403131"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/ScrollView_course"
                android:layout_width="704dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:contentDescription="@string/app_name"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:src="@android:drawable/btn_star" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="零基础二胡入门"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout_Course2"
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButton_Course2"
                            android:contentDescription="@string/app_name"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:src="@android:drawable/stat_sys_upload" />

                        <TextView
                            android:id="@+id/textView_Course2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="零基础古筝教程"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout_Course3"
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButton_Course3"
                            android:contentDescription="@string/app_name"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:src="@android:drawable/stat_sys_headset" />

                        <TextView
                            android:id="@+id/textView_Course3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="零基础笛子教程"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout_Course4"
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButton_Course4"
                            android:contentDescription="@string/app_name"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:src="@android:drawable/stat_sys_phone_call_on_hold" />

                        <TextView
                            android:id="@+id/textView_Course4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="零基础指弹入门"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>